<table>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
      <tr>
          <td scope="row"><%= task.title%></td>
          <td><%= task.date%></td>
          <td><%= task.time%></td>
          <td><%= task.description%></td>
      </tr>
  <%end%>
</table>